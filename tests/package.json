{
  "name": "feature6-file-reference-protocol-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Feature 6: File Reference Protocol Implementation",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:feature6": "jest --testPathPattern=feature6",
    "test:core": "jest feature6-file-reference-protocol.test.js",
    "test:integration": "jest feature6-integration.test.js",
    "test:security": "jest feature6-security.test.js",
    "test:performance": "jest --testNamePattern='Performance|performance'",
    "test:security-only": "jest --testNamePattern='Security|security'",
    "lint:tests": "eslint **/*.test.js **/*.spec.js",
    "lint:tests:fix": "eslint **/*.test.js **/*.spec.js --fix"
  },
  "keywords": [
    "file-reference-protocol",
    "tdd",
    "testing",
    "security",
    "integration",
    "performance",
    "yolo-pro",
    "jest"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.53.0",
    "eslint-plugin-jest": "^27.6.0"
  },
  "dependencies": {
    "supertest": "^6.3.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "*.test.js",
    "*.spec.js",
    "setup.js",
    "jest.config.js"
  ]
}