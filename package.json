{
  "name": "@yolo-pro/modular-architecture",
  "version": "3.0.0",
  "description": "Production-ready modular architecture system with hot-swapping, dependency injection, and plugin marketplace",
  "type": "module",
  "main": "src/architecture/ModularEngine.js",
  "exports": {
    ".": {
      "import": "./src/architecture/ModularEngine.js"
    },
    "./ServiceContainer": {
      "import": "./src/architecture/ServiceContainer.js"
    },
    "./PluginManager": {
      "import": "./src/plugins/PluginManager.js"
    },
    "./ModuleLifecycle": {
      "import": "./src/architecture/ModuleLifecycle.js"
    },
    "./ModuleSecurity": {
      "import": "./src/security/ModuleSecurity.js"
    },
    "./ModuleConfig": {
      "import": "./src/config/ModuleConfig.js"
    },
    "./ModuleBridge": {
      "import": "./src/communication/ModuleBridge.js"
    },
    "./ModuleMarketplace": {
      "import": "./src/marketplace/ModuleMarketplace.js"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/*/**.test.js",
    "test:integration": "jest tests/integration/**.test.js",
    "test:e2e": "jest tests/e2e/**.test.js",
    "test:performance": "jest tests/performance/**.test.js --testTimeout=30000",
    "test:security": "jest tests/security/**.test.js",
    "lint": "eslint src tests examples",
    "lint:fix": "eslint src tests examples --fix",
    "typecheck": "tsc --noEmit",
    "build": "npm run lint && npm run typecheck && npm run test:unit",
    "build:full": "npm run lint && npm run typecheck && npm run test",
    "dev": "node examples/basic-plugin/demo.js",
    "benchmark": "node benchmarks/run.js",
    "docs": "jsdoc -c jsdoc.config.json",
    "clean": "rm -rf coverage docs/generated node_modules/.cache",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build:full"
  },
  "keywords": [
    "modular",
    "architecture",
    "plugins",
    "hot-swapping",
    "dependency-injection",
    "microservices",
    "enterprise",
    "scalable",
    "yolo-pro",
    "marketplace",
    "security",
    "performance"
  ],
  "author": {
    "name": "YOLO-PRO Team",
    "email": "team@yolo-pro.com",
    "url": "https://yolo-pro.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yolo-pro/modular-architecture.git"
  },
  "bugs": {
    "url": "https://github.com/yolo-pro/modular-architecture/issues"
  },
  "homepage": "https://github.com/yolo-pro/modular-architecture#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    }
  },
  "jest": {
    "type": "module",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000,
    "maxWorkers": "50%",
    "collectCoverage": false
  },
  "files": [
    "src/",
    "examples/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}