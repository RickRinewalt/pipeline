{
  "name": "@yolo-pro/cli",
  "version": "1.0.0",
  "description": "High-velocity development toolkit with standardized protocols and Claude-Flow integration",
  "main": "dist/index.js",
  "bin": {
    "yolo-pro": "dist/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src --out docs/api",
    "prepare": "npm run build",
    "postpack": "rm -f dist/*.tgz"
  },
  "keywords": [
    "yolo-pro",
    "claude-flow",
    "development-velocity",
    "protocols",
    "ci-cd",
    "github-integration",
    "swarm-coordination",
    "agile-development"
  ],
  "author": "YOLO-Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yolo-pro/cli.git"
  },
  "homepage": "https://yolo-pro.dev",
  "bugs": {
    "url": "https://github.com/yolo-pro/cli/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "boxen": "^7.1.1",
    "table": "^6.8.1",
    "yaml": "^2.3.4",
    "semver": "^7.5.4",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.2",
    "@octokit/rest": "^20.0.2",
    "@octokit/graphql": "^7.0.2",
    "jsonschema": "^1.4.1",
    "fast-glob": "^3.3.2",
    "chokidar": "^3.5.3",
    "debounce": "^2.0.0",
    "node-cache": "^5.1.2",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/jest": "^29.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/semver": "^7.5.6",
    "@types/ws": "^8.5.9",
    "@types/compression": "^1.7.5",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "typedoc": "^0.25.4",
    "prettier": "^3.1.0"
  },
  "peerDependencies": {
    "claude-flow": ">=2.0.0"
  },
  "files": [
    "dist",
    "templates",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "yolo-pro": {
    "configSchema": "./schemas/config.schema.json",
    "templates": "./templates",
    "protocols": {
      "wcp": {
        "version": "1.0",
        "maxIssuesPerFeature": 3,
        "maxFeaturesPerEpic": 7
      },
      "ci": {
        "version": "1.0",
        "require100Percent": true,
        "implementationFirst": true
      },
      "quality": {
        "version": "1.0",
        "gates": ["implementation", "ci", "documentation"],
        "swarmDeploymentThreshold": 2
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "no-console": "warn"
    }
  }
}